<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="96dp"
	android:paddingStart="12dp"
	android:paddingEnd="12dp"
	android:background="#FFF">

	<ImageView
		android:id="@+id/medImg"
		android:layout_centerVertical="true"
		android:layout_width="80dp"
		android:layout_height="80dp" />

	<TextView
		android:id="@+id/medNameText"
		android:layout_marginStart="8dp"
		android:layout_marginTop="2dp"
		android:layout_alignTop="@id/medImg"
		android:layout_toRightOf="@id/medImg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="药名"
		android:textSize="14sp"
		android:textColor="@color/colorWordBlack" />

	<TextView
		android:id="@+id/medPackingSizeText"
		android:layout_marginStart="8dp"
		android:layout_marginTop="2dp"
		android:layout_below="@id/medNameText"
		android:layout_toRightOf="@id/medImg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="药名"
		android:textSize="12sp" />

	<TextView
		android:id="@+id/medPriceText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_alignBottom="@id/medImg"
		android:layout_toRightOf="@id/medImg"
		android:text="￥2"
		android:textColor="@color/colorWordBlack" />

	<TextView
		android:id="@+id/medNumText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignBottom="@id/medImg"
		android:text="x1" />

</RelativeLayout>