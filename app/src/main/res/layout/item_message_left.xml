<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/colorBackGray">

	<com.bingo.lib.CustomImageView
		android:id="@+id/iv_msg_left"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginStart="10dp"
		android:layout_marginTop="15dp"
		android:src="@mipmap/img_user_photo"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tv_name_msg_left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="杨药师"
		app:layout_constraintStart_toEndOf="@+id/iv_msg_left"
		app:layout_constraintTop_toTopOf="@id/iv_msg_left"
		android:layout_marginStart="10dp"
		android:layout_marginTop="6dp"/>

	<TextView
		android:id="@+id/tv_content_msg_left"
		android:background="@drawable/back_message_text_left"
		android:layout_width="wrap_content"
		android:maxWidth="280dp"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="@id/tv_name_msg_left"
		app:layout_constraintTop_toBottomOf="@id/tv_name_msg_left"
		android:layout_marginStart="8dp"
		android:text="你好，有什么问题请咨询？"
		android:textColor="@color/colorTextGray"
		android:paddingHorizontal="6dp"
		android:paddingVertical="8dp"
		/>





</androidx.constraintlayout.widget.ConstraintLayout>