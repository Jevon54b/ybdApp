<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:padding="16dp"
	android:layout_width="match_parent"
	android:layout_height="117dp"
	>

	<ImageView
		android:id="@+id/medImg"
		android:layout_width="86dp"
		android:layout_height="85dp"
		android:layout_gravity="center_vertical"/>

	<RelativeLayout
		android:layout_marginStart="8dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:id="@+id/layout2"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="2dp"
				android:background="@drawable/back_item_text"
				android:text="急速配送"
				android:textSize="10sp"
				android:textColor="#fff"/>
			<TextView
				android:id="@+id/medNameText"
				android:layout_marginStart="8dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="药品名字"
				android:textSize="13sp"
				android:textColor="@color/colorWordBlack"/>
		</LinearLayout>

		<TextView
			android:id="@+id/medFunctionsText"
			android:layout_below="@id/layout2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="功能主治:x好好好或或或或"
			android:textSize="10sp"
			android:textColor="@color/colorTextGrayLight"
			android:maxLines="2"
			android:ellipsize="end"
			android:gravity="start"
			/>


		<RelativeLayout
			android:layout_alignParentBottom="true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_alignParentBottom="true"
				android:includeFontPadding="false"
				android:id="@+id/medPriceText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="￥19.8"
				android:textSize="14sp"
				android:textColor="@color/colorPrimary"
				android:textStyle="bold" />

			<TextView
				android:layout_marginEnd="12dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				android:includeFontPadding="false"
				android:id="@+id/medSalesNumText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/colorTextGray86"
				android:text="累计销量:0"
				android:textSize="10sp" />


		</RelativeLayout>

	</RelativeLayout>

</LinearLayout>